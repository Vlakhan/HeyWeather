<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spalsh_screen"
    tools:context=".SplaceScreen">

<ImageView
    android:id="@+id/spalaceBackgroud"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_150sdp"
    android:src="@drawable/white_cloud"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather Matters \nWe've Got The Details"
        app:layout_constraintTop_toBottomOf="@+id/spalaceBackgroud"
        app:layout_constraintLeft_toLeftOf="@+id/spalaceBackgroud"
        app:layout_constraintRight_toRightOf="@+id/spalaceBackgroud"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/merriweathersans_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>